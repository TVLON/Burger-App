<div class='container'>
	<div class='row'>
	<div class= 'undevouredBurgers'>
		<div class="col lg 6">
		<h1>Eat or Add a New Burger!</h1>
		<hr>
		{{#each allBurgers}}
			{{#unless this.devoured}}
				<div>
					<button type ="button" class="btn btn-primary mb-2 burgerDevoured" data-id={{this.item_id}}>EAT ME</button>
					<div>{{this.burger_name}}</div>
				</div>
			{{/unless}}
		{{/each}}
	</div>
	
	</div>
	<div class= 'col lg 6'>
		<form class="form-inline">
  <div class="form-group mb-2">
    <label for="staticEmail2" class="sr-only">New Burger</label>
    <input type="text" readonly class="form-control-plaintext" id="staticEmail2" value="Burger">
  </div>
	</div>
  <div class="form-group mx-sm-3 mb-2">
    <label for="inputPassword2" class="sr-only">New Burger</label>
    <input type="text" class="form-control" id="burgerInput" placeholder="New Burger">
  </div>
  <button type="button" class="btn btn-primary mb-2" id="addBurger">Add Burger</button>
</form>
	</div>
	<div class='row'>
	<div class= 'devouredBurgers'>
		<h1>Devoured Burgers</h1>
		<hr>
		{{#each allBurgers}}
			{{#if this.devoured}}
				<div>{{this.burger_name}}</div>
			{{/if}}
		{{/each}}
</div>
	</div>
</div>
</div>
</div>


